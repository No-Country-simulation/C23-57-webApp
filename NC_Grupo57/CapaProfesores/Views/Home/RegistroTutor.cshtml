
@{
    ViewBag.Title = "RegistroTutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/styles/StyTutor.css")
}

<body>

    <form action="@Url.Action("RegistroTutor", "Register")" method="post">
        <h2>Formulario de registro</h2>
        <fieldset>
            <legend>Información Básica</legend>

            <div class="form__div">
                <label for="select">Tipo De Usuario</label>
                <select name="typeofuser" id="select">
                    @foreach (var rol in ViewBag.Roles)
                    {
                        <option value="@rol.Id_Rol">@rol.Descripcion</option>
                    }
                </select>
            </div>

            <div class="form__div">
                <label for="Apellido">Apellido</label>
                <input class="form__input" id="Apellido" type="text" name="txtApellido" required>
            </div>
            <div class="form__div">
                <label for="Nombre">Nombre</label>
                <input class="form__input" id="Nombre" type="text" name="txtNombre" required>
            </div>
            <div class="form__div">
                <label for="celular">Celular</label>
                <input class="form__input" id="celular" type="text" name="txtTel" required>
            </div>
            <div class="form__div">
                <label for="dni">DNI</label>
                <input class="form__input" id="dni" type="text" name="txtDni" required>
            </div>
            <div class="form__div">
                <label for="fechaNacimiento">Fecha de Nacimiento</label>
                <input class="form__input" id="fechaNacimiento" type="date" name="txtNacimiento" required>
            </div>
            <div class="form__div">
                <label for="email">Correo Electrónico</label>
                <input class="form__input" id="email" type="email" name="txtMail" required>
            </div>
            <div class="form__div">
                <label for="password1">Contraseña</label>
                <input class="form__input" id="password1" type="password" name="txtPass1" required>
            </div>
            <div class="form__div">
                <label for="password2">Confirma Contraseña</label>
                <input class="form__input" id="password2" type="password" name="txtPass2" required>
            </div>
        </fieldset>

        <div class="form__button">
            <button class="form__link" type="submit">Registrar</button>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

</body>
