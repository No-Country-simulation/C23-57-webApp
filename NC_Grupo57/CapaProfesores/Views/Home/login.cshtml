
@{
    ViewBag.Title = "EDUFLOW - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/styles/StyLogin.css")
}

<body>
    <div class="container d-flex justify-content-center align-items-center py-5" style="min-height: 100vh;">
        <div class="card shadow-lg" style="width: 100%; max-width: 400px; border-radius: 15px; overflow: hidden;">
            <div class="card-body" style="background-color: #F6F6F6; border-radius: 15px;">
                <h2 class="text-center mb-4" style="color: #00584F;">Inicio de sesión</h2>
                <form action="@Url.Action("login", "Login")" method="post">
                    <div class="mb-3">
                        <label for="mail" class="form-label" style="color: #00584F; width: 100% !important; ">Correo Electrónico</label>
                        <input type="email" class="form-control" id="mail" placeholder="ejemplo@gmail.com" name="correo" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label" style="color: #00584F;">Contraseña</label>
                        <input type="password" class="form-control w-100" id="password" placeholder="xxxxxxx" name="clave" required>
                    </div>
                    <div class="mb-3 text-center">
                        <a href="#" class="text-decoration-none">¿Olvidé mi contraseña?</a>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Iniciar sesión</button>
                </form>
                <div class="mt-3 text-center">
                    <span style="color: #00584F;">¿No has hecho tu</span>
                    <a href="@Url.Action("RegistroTutor")" class="text-decoration-none">registro</a>?
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
</body>


